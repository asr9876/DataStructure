
class Solution {
public:
    bool isPowerOfThree(int n) {
        int aws = 0 ;
        int i = 0 ;
        while(aws <= INT_MAX/2){
                aws = pow(3 , i);
                if(aws == n){
                    return true ;
                }
                    i++;
             }
             return false;
        }
    
};
